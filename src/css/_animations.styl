  /*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
  */

.order-enter
 background red
 transition all 0.5s
 transform translateY(-120%) rotate(180deg) 
 max-height 0
 padding 0 !important 
 &.order-enter-active
  background yellow
  max-height 60px
  padding 3rem 0 !important
  transform translateY(0) rotate(0deg);


.order-leave
	transition all 0.5s;
	transform translateX(0)
	&.order-leave-active
		transform translateX(120%)
		max-height 0
		padding 0



.count-leave
  transition all .25s
  transform translateY(100%) //start off screen
  &.count-enter-active
    transform translateY(0) // put it in it's normal resting spot


.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0  
  transform translateY(0) //start it where it is
  &.count-leave-active
    transform translateY(-100%) // start it where it is  